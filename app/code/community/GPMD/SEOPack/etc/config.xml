<config>
    <modules>
        <GPMD_SEOPack>
            <version>1.3.0</version>
        </GPMD_SEOPack>
    </modules>
    <default>
        <seopack>
            <metarobots>
                <site_enabled>1</site_enabled>
                <category_enabled>1</category_enabled>
                <product_enabled>1</product_enabled>
                <filter_enabled>1</filter_enabled>
                <treat_category_as_filter>1</treat_category_as_filter>
                <treat_sort_as_filter>1</treat_sort_as_filter>
                <search_enabled>1</search_enabled>
                <cms_page_enabled>1</cms_page_enabled>
            </metarobots>
            <misc>
                <rel_pagination_enabled>1</rel_pagination_enabled>
                <ga_ignore>1</ga_ignore>
            </misc>
        </seopack>
    </default>
    <global>
        <models>
            <seopack>
                <class>GPMD_SEOPack_Model</class>
            </seopack>
            <catalog>
                <rewrite>
                    <product_visibility>GPMD_SEOPack_Model_Product_Visibility</product_visibility>
                </rewrite>
            </catalog>
        </models>
        <helpers>
            <seopack>
                <class>GPMD_SEOPack_Helper</class>
            </seopack>
        </helpers>
        <resources>
            <seopack_setup>
                <setup>
                    <module>GPMD_SEOPack</module>
                    <class>GPMD_SEOPack_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </seopack_setup>
            <seopack_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </seopack_write>
            <seopack_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </seopack_read>
        </resources>
    </global>
    <frontend>
        <events>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <seopack_controller_layout_generate_blocks_after_robots>
                        <type>singleton</type>
                        <class>seopack/observer</class>
                        <method>setMetaRobots</method>
                    </seopack_controller_layout_generate_blocks_after_robots>
                    <seopack_controller_layout_generate_blocks_after_ga>
                        <type>singleton</type>
                        <class>seopack/observer</class>
                        <method>setGAIgnore</method>
                    </seopack_controller_layout_generate_blocks_after_ga>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <controller_action_layout_render_before_catalog_category_view>
                <observers>
                    <seopack_controller_layout_render_before_catalog_category_view>
                        <type>singleton</type>
                        <class>seopack/observer</class>
                        <method>doPagination</method>
                    </seopack_controller_layout_render_before_catalog_category_view>
                </observers>
            </controller_action_layout_render_before_catalog_category_view>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_meta_prepare_form>
                <observers>
                    <gpmd_seopack_cms_page_edit_tab_meta>
                        <type>singleton</type>
                        <class>seopack/observer</class>
                        <method>addRobotsToCmsPages</method>
                    </gpmd_seopack_cms_page_edit_tab_meta>
                </observers>
            </adminhtml_cms_page_edit_tab_meta_prepare_form>
            <cms_page_prepare_save>
                <observers>
                    <gpmd_seopack_cms_page_form_save>
                        <type>singleton</type>
                        <class>seopack/observer</class>
                        <method>saveRobotsToCmsPages</method>
                    </gpmd_seopack_cms_page_form_save>
                </observers>
            </cms_page_prepare_save>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <seopack>
                                            <title>SEOPack</title>
                                        </seopack>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
